@{
    ViewData["Title"] = "Dashboard";
}

@section Hero {
    <div class="container hero">
        <div class="row align-items-center">
            <div class="col-12 col-lg-6 col-xl-5 offset-xl-1 mb-5 mb-lg-0">
                <h1>Plan. Track. Deliver.</h1>
                <p>Insightly helps your teams collaborate on projects, manage tasks, and ship work faster with clarity and transparency.</p>
                <a class="btn btn-light btn-lg action-button mr-2 mb-2" asp-controller="Projects" asp-action="Create">Create Project</a>
                <a class="btn btn-outline-light btn-lg mb-2" asp-controller="Projects" asp-action="Index">View Projects</a>
            </div>

        </div>
    </div>
}

<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fa fa-tasks mr-1"></i> Tasks</h5>
                <p class="card-text small">View and update tasks assigned to you across all active projects.</p>
                <a asp-controller="TaskItems" asp-action="Index" class="btn btn-primary btn-sm">Go to Tasks</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fa fa-folder-open mr-1"></i> Projects</h5>
                <p class="card-text small">Browse all projects you have access to and monitor progress.</p>
                <a asp-controller="Projects" asp-action="Index" class="btn btn-primary btn-sm">Browse Projects</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fa fa-user-circle mr-1"></i>Users</h5>
                <p class="card-text small">Manage user accounts, roles, and permissions for your organization.</p>
                <a asp-controller="Admin" asp-action="Users" class="btn btn-primary btn-sm">Manage User</a>
            </div>
        </div>
    </div>
</div>
